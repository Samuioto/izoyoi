<%- __js([
    'js/utils.js',
    'js/main.js',
    'js/header-shrink.js',
    'js/back2top.js',
    'js/dark-light-toggle.js',
]) %>

<% if (theme.local_search.enable) { %>
    <%- __js('js/local-search.js') %>
<% } %>

<% if (theme.code_copy.enable) { %>
    <%- __js('js/code-copy.js') %>
<% } %>

<% if (theme.lazyload.enable) { %>
    <%- __js('js/lazyload.js') %>
<% } %>

<% if (theme.footer.runtime) { %>
    <%- __js('js/runtime.js') %>
    <%- __js('js/odometer.min.js') %>
    <%- __css('css/odometer-theme-minimal.css') %>
<% } %>

<div class="post-scripts<%= theme.pjax.enable === true ? ' pjax' : '' %>">
    <% if (theme.toc.enable && is_post()) { %>
        <%- __js([
            'js/toc-toggle.js',
            'js/libs/anime.min.js',
            'js/toc.js'
        ]) %>
    <% } %>
</div>

<% if (theme.pjax.enable === true) { %>
    <%- partial('pjax/pjax') %>
<% } %>
